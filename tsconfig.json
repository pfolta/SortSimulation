{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDirs": ["src"],
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "build"]
}
